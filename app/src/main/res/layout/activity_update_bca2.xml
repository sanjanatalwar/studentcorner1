<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/marks1"
    tools:context="com.auribises.college.UpdateBca2">


    <EditText
        android:layout_width="331dp"
        android:layout_height="87dp"
        android:id="@+id/bca2Marks"
        android:background="@drawable/activity_edittext_shape"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintVertical_bias="0.294"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.513" />

    <Button
        android:id="@+id/bca2Update"
        android:layout_width="252dp"
        android:layout_height="81dp"
        android:text="Enter Marks"
        android:textColor="@color/colorWhite"
        android:textSize="30dp"
        android:background="@drawable/button__shape"
        android:onClick="onClick"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintVertical_bias="0.566"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        tools:layout_editor_absoluteY="243dp"
        tools:layout_editor_absoluteX="66dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="284dp"
        android:layout_height="91dp"
        android:text="Enter The Result For BCA2..!!"
        android:textSize="30dp"
        android:textColor="@color/lightBlue"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.049" />

</android.support.constraint.ConstraintLayout>
