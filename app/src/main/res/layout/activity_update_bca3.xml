<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/marks1"
    tools:context="com.auribises.college.UpdateBca3">

    <EditText
        android:layout_width="333dp"
        android:layout_height="89dp"
        android:id="@+id/bca3marks"
        android:background="@drawable/activity_edittext_shape"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.322"
        app:layout_constraintHorizontal_bias="0.514" />

    <Button
        android:id="@+id/bca3update"
        android:onClick="onClick"
        android:layout_width="262dp"
        android:layout_height="87dp"
        android:text="Enter Marks"
        android:textSize="30dp"
        android:background="@drawable/button__shape"
        android:textColor="@color/colorWhite"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.6" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="305dp"
        android:layout_height="70dp"
        android:text="Enter The Result For BCA3..!!"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/lightBlue"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.071"
        tools:layout_editor_absoluteX="22dp"
        app:layout_constraintHorizontal_bias="0.51" />

</android.support.constraint.ConstraintLayout>
