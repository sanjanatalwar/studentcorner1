<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"

android:background="@drawable/blur"
    android:orientation="vertical"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.auribises.college.LoginActivity"
    tools:showIn="@layout/app_bar_login">



    <EditText


        android:id="@+id/editTextName"
        android:layout_width="334dp"
        android:layout_height="71dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:drawableLeft="@drawable/user"
android:background="@drawable/activity_edittext_shape"

        android:hint=" Enter Name"

        android:textColorHint="@color/black"

        android:textSize="25dp"

        android:textColorHighlight="@color/black"


        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.307"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="327dp"
        android:layout_height="70dp"
        android:ems="10"

        android:drawableLeft="@drawable/keyy"
        android:hint=" Password"
        android:textSize="22dp"
        android:textColorHint="@color/black"
        android:background="@drawable/activity_edittext_shape"

        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent" />



    <Button
        android:id="@+id/login"
        android:layout_width="336dp"
        android:layout_height="55dp"
        android:text="TEACHER LOGIN"
        android:textSize="25dp"
        android:textStyle="italic"
        android:onClick="onClick"
        android:textColor="@color/colorWhite"
        android:background="@drawable/button__shape"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"

        app:layout_constraintVertical_bias="0.887"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="172dp"
        android:layout_height="44dp"
        android:text="Welcome"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textAlignment="center"

        android:textColor="@color/black"

        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.095"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />



    <Button
        android:id="@+id/studentLogin"
        android:layout_width="102dp"
        android:layout_height="45dp"
        android:text=" BCa1 Login"
        android:textSize="16dp"
        android:onClick="clickMe"
android:textStyle="italic"
        android:background="@drawable/button__shape"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"

        app:layout_constraintVertical_bias="0.686"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.03" />

    <Button
        android:id="@+id/bca2login"
        android:layout_width="107dp"
        android:layout_height="49dp"
        android:text="BCA2 LOGIN"
        android:textSize="16dp"
        android:onClick="bca2login"
        android:textStyle="italic"
        android:background="@drawable/button__shape"
        android:textColor="@color/colorWhite"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.691"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.501" />

    <Button
        android:id="@+id/bca3login"
        android:layout_width="104dp"
        android:layout_height="48dp"
        android:text="BCA3 LOGIN"
        android:textSize="16dp"
        android:onClick="bca3login"
android:textStyle="italic"
        android:background="@drawable/button__shape"
        android:textColor="@color/colorWhite"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.969"
        app:layout_constraintVertical_bias="0.686" />



</android.support.constraint.ConstraintLayout>
